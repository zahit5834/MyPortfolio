@model List<Portfolio>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div class="container-fluid">
    <h3>Portfolyo Listesi</h3>
    <div class="card">
        <div class="card-body">
            <div class="card-sub">
                Portfolyo İlgili İşlemleri Aşağıdaki Panelden Yapabilirsiniz
            </div>
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Başlık</th>
                        <th scope="col">Alt Başlık</th>
                        <th scope="col">Açıklama</th>
                        <th scope="col">Sil</th>
                        <th scope="col">Güncelle</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.PortfolioId</td>
                            <td>@item.Title</td>
                            <td>@item.Subtitle</td>
                            <td>@item.Description</td>
                            <td><a href="/Portfolio/DeletePortfolio/@item.PortfolioId" class="btn btn-danger">Sil</a></td>
                            <td><a href="/Portfolio/UpdatePortfolio/@item.PortfolioId" class="btn btn-success">Güncelle</a></td>
                        </tr>
                    }
                </tbody>
            </table>
            <a href="/Portfolio/CreatePortfolio/" class="btn btn-primary">Yeni Portfolyo Ekle</a>
        </div>
    </div>
</div>
