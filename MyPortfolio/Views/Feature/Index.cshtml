@model Feature
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div class="container-fluid">
    <h3>Öne Çıkanları Güncelleme Sayfası</h3>
    <div class="card">
        <div class="card-body">
            <div class="card-sub">
                Öne Çıkanlar İle İlgili İşlemleri Aşağıdaki Panelden Yapabilirsiniz
            </div>
            <hr />
            <form method="post">
                <input type="hidden" asp-for="FeatureId" />
                <label>Başlık</label>
                <input type="text" asp-for="Title" class="form-control">
                <br />
                <label>Açıklama</label>
                <input type="text" asp-for="Description" class="form-control">
                <br />
                <button class="btn btn-primary">Öne Çıkanları Güncelle</button>
            </form>
        </div>
    </div>
</div>
