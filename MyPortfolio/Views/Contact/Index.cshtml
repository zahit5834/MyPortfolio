@model Contact
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div class="container-fluid">
    <h3>İletişim Bilgileri Güncelleme Sayfası</h3>
    <div class="card">
        <div class="card-body">
            <div class="card-sub">
                İletişim İle İlgili İşlemleri Aşağıdaki Panelden Yapabilirsiniz
            </div>
            <hr />
            <form method="post">
                <input type="hidden" asp-for="ContactId" />
                <label>Başlık</label>
                <input type="text" asp-for="Title" class="form-control">
                <br />
                <label>Açıklama</label>
                <input type="text" asp-for="Description" class="form-control">
                <br />
                <label>Telefon 1</label>
                <input type="text" asp-for="Phone1" class="form-control">
                <br />
                <label>Telefon 2</label>
                <input type="text" asp-for="Phone2" class="form-control">
                <br />
                <label>E-Posta 1</label>
                <input type="text" asp-for="Email1" class="form-control">
                <br />
                <label>E-Posta 2</label>
                <input type="text" asp-for="Email2" class="form-control">
                <br />
                <label>Adres</label>
                <input type="text" asp-for="Address" class="form-control">
                <br />
                <button class="btn btn-primary">Öne Çıkanları Güncelle</button>
            </form>
        </div>
    </div>
</div>